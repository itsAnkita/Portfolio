@import "partials/reset";
@import "partials/variables";
@import "partials/fonts";
@import "partials/typography";
@import "partials/mixins";
* {
    box-sizing: border-box;
}

::selection {
    background: red;
    color: yellow;
}

strong {
    font-family: Lato-Bold;
    color: #000;
}

em {
    color: $brownish-grey;
}

.clearfix:after {
    content: "";
    display: block;
    clear: both;
}

.pull-left {
    float: left;
}

.pull-right {
    float: right;
}

.text-center {
    text-align: center;
}

.landing-wrapper {
    position: fixed;
    top: 0;
    z-index: -1;
    width: 100%;
    height: 590px;
    background-color: #fff;
    padding: 15px 15px 0 15px;
}

.container {
    width: 100%;
    background-color: $green;
    height: 575px;
}

.wrapper {
    width: 970px;
    margin: 0 auto;
    text-align: center;
    color: $white;
    h1 {
        padding-top: 60px;
    }
}

.intro {
    padding-top: 47px;
    height: 397px;
    width: 960px;
    margin: 0 auto;
    position: relative;
}

.coding {
    position: absolute;
    top: 28%;
    left: 14%;
    height: 200px;
    width: 77%;
    text-align: left;
    font-family: monospace;
    font-size: 20px;
    line-height: 20px;
    .line1 {
        top: 10px;
        color: $blue;
    }
    .line2 {
        color: $blue;
    }
    .line3 {
        color: $green;
    }
    .line4 {
        color: $yellow;
        h4 {
            color: $brownish-grey;
        }
    }
    span {
        position: absolute;
        top: -2px;
        right: -1px;
        background: #FEFEFE;
        border-left: .1em #666 solid;
    }
}

.line1 {
    position: absolute;
    span {
        animation: typing 2s steps(15, end), blink-caret 2s step-end;
        @include type-animation(typing, 2s, 15, blink-caret, 2s, forwards);
    }
}

.line2 {
    position: absolute;
    top: 15%;
    span {
        width: 100%;
        border-left: .1em #FEFEFE solid;
        @include type-animation(typing, 1s, 6, blink-caret, 1s, forwards, 2s);
    }
}

.line3 {
    position: absolute;
    top: 25%;
    span {
        width: 100%;
        border-left: .1em #FEFEFE solid;
        @include type-animation(typing, 1s, 7, blink-caret, 1s, forwards, 3s);
    }
}

.line4 {
    position: absolute;
    top: 35%;
    span {
        width: 100%;
        border-left: .1em #FEFEFE solid;
        @include type-animation(typing, 4.5s, 30, blink-caret-perma, 1s, forwards, 4s, infinite);
    }
}

.scroll-down {
    display: inline-block;
    border: 2px solid $background-grey;
    margin-top: -32px;
    height: 65px;
    width: 65px;
    background-color: $green;
    border-radius: 50%;
}

