}

.slice-right {
    position: absolute;
    z-index: 11;
    background-color: $green;
    width: 100%;
    height: 100%;
    clip: rect(0px, 55px, 55px, 55px);
    @include border-radius(50%);
}

.slice-left {
    position: absolute;
    z-index: 11;
    background-color: $green;
    width: 100%;
    height: 100%;
    clip: rect(55px, 55px, 110px, 55px);
    @include border-radius(50%);
}

.percent {
    position: absolute;
    z-index: 20;
    top: 5px;
    right: 5px;
    bottom: 5px;
    left: 5px;
    border: 1px solid $green;
    background: $white;
    @include border-radius(50%);
}

.number {
    position: absolute;
    z-index: 30;
    width: 100%;
    height: 100%;
    padding-top: 50%;
    line-height: 0;
    font-size: 18px;
    color: $grey;
}

.slice-right {
    @include pie(right-slice, $animation-speed * 4, $animation-speed, 1, forwards);
}

.slice-left {
    @include pie(left-slice, $animation-speed * 5, $animation-speed, 1, forwards);
}
.latest-bits {
